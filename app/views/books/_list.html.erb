<% if book.errors.any? %>
  <div class="alert alert-warning">
    <h2><%= book.errors.count %>error prohibited this obj from being saved:</h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3>Userinfo</h3>
<%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
<table>
  <tbody>
     <tr>
        <th>name</th>
        <th><%= user.name %></th>
     </tr>
     <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
     </tr>
  </tbody>
</table>

<div>
  <% if user.id == current_user.id %>
	<%= link_to "リンク先", edit_user_path(user) %>
  <% else user.id != current_user.id %>
  <%= link_to "リンク先", user_path(current_user) %>
  <% end %>
</div>

<h3>New book</h3>

<%= form_for book do |f| %>
<!-- @book=Book.new＝＞createアクションで定義した空箱 -->
<h4>Title</h4>
<%= f.text_field :title %>
<!-- 空箱にtitleが登録されている -->
<h4>Opinion</h4>
<%= f.text_area :body %><br><br>
<!-- 空箱にbodyが登録されている -->
<%= f.submit 'Create Book' %>

<% end %>