<h3>Userinfo</h3>
<%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
<table>
  <tbody>
     <tr>
        <th>name</th>
        <th><%= @user.name %></th>
     </tr>
     <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
     </tr>
  </tbody>
</table>

<div>
	<%= link_to "リンク先", edit_user_path(@user) %>
</div>

<h3>New book</h3>

<%= form_for book do |f| %>
<!-- @book=Book.new＝＞createアクションで定義した空箱 -->
<h4>Title</h4>
<%= f.text_field :title %>
<!-- 空箱にtitleが登録されている -->
<h4>Opinion</h4>
<%= f.text_area :body %><br><br>
<!-- 空箱にbodyが登録されている -->
<%= f.submit 'Create Book' %>

<% end %>