
<%= flash[:notice] %><%= flash[:success] %>
<%= render 'books/list', book: @book ,user: @users %>


<h2>Book detail</h2>
<table>
	<thead>
		<tr>

			<td><%= link_to user_path(@users) do %>
				<%= attachment_image_tag @users, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
				<%= @users.name %>
				<% end %>
			</td>
			<td><%= @books.title %></td>
			<td><%= @books.body %></td>
			<td><%= link_to "Edit",edit_book_path(@books) %></td>
			<td><%= link_to "Destroy",book_path(@books), method: :delete %></td>
		</tr>
	</thead>
</table>

