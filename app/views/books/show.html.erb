<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
<%= flash[:notice] %><%= flash[:success] %>
<!-- User info -->
<!-- New book -->
<%= render 'books/list', book: @book, user: @users %>
      </div>

      <div class="col-xs-9">
        <h2>Book detail</h2>
          <table class="table">
  	        <thead>
		      <tr>
		      	<th></th>
		      	<th></th>
		      	<th></th>
		      	<th></th>
		      	<th></th>
		      	<th></th>
		      </tr>
	        </thead>
		    <tbody>
		      <tr>
                <td>
                	<%= link_to user_path(@users) do %>
				    <%= attachment_image_tag @users, :profile_image, class: "img-circle profile-thumb", fallback: "no_image.jpg", size: "60x60" %><br>
				    <%= @users.name %>
				    <% end %>
			    </td>
			    <td>
			    	<%= link_to book_path(@books) do %>
				    <%= @books.title %>
				    <% end %>
			    </td>
			    <td>
			    	<%= @books.body %>
			    </td>
			    <td>
			    	<!-- いいね機能 -->
			    	<% if @books.favorited_by?(current_user) %>
    					<%= link_to book_favorites_path(@books), method: :delete do %>
    					<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
    					<%= @books.favorites.count %>
    					<% end %>
					<% else %>
    					<%= link_to book_favorites_path(@books), method: :post do %>
    					<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
    					<%= @books.favorites.count %>
    					<% end %>
					<% end %>
				    <!-- いいね機能 -->
			    </td>
			    <td>
			    	<!-- コメント機能 -->
			    	<p class="comment-count">コメント数：<%= @books.book_comments.count %></p>
                    <!-- コメント機能 -->
			    </td>
			    <td>
			    	<% if @books.user == current_user %>
				    <%= link_to "Edit",edit_book_path(@books), class: "btn-sm btn-success" %>
				</td>
			    <td>
			    	<%= link_to "Destroy",book_path(@books), method: :delete, data: {confirm: "本当に消しますか？"} ,class: "btn-sm btn-danger" %>
			    </td>
			  <tr>
			<% end %>
	        </tbody>
          </table>

          <%= form_for [@books, @book_comment] do |f| %>
           <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
           <%= f.submit "送信", class: "pull-right" %>
           <% end %><br>
		  <!-- コメント一覧 -->
          <table class="table">
            <thead>
		      <tr>
			    <th>コメント一覧</th>
			    <th></th>
		      </tr>
		    </thead>
		    <tbody>
		    	<% @book_comments.each do |bookcomment| %>
		      <tr>
		      	<td><%= bookcomment.comment %></td>
		      	<td><% if bookcomment.user == current_user %>
		      		<%= link_to "削除",book_book_comment_path(book_id:@books,id:bookcomment), method: :delete %>
		      		<% end %>
		      	</td>
		      </tr>
                <% end %>
			</tbody>
	      </table>
      </div>
      </div>
  </div>
</div>