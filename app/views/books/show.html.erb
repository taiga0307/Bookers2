<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
<%= flash[:notice] %><%= flash[:success] %>
<!-- User info -->
<!-- New book -->
<%= render 'books/list', book: @book, user: @users %>
      </div>

      <div class="col-xs-9">
        <h2>Book detail</h2>
          <table class="table">
  	        <thead>
		      <tr>
		      	<th></th>
		      	<th></th>
		      	<th></th>
		      	<th></th>
		      	<th></th>
		      </tr>
	        </thead>
		    <tbody>
		      <tr>
                <td>
                	<%= link_to user_path(@users) do %>
				    <%= attachment_image_tag @users, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %><br>
				    <%= @users.name %>
				    <% end %>
			    </td>
			    <td>
			    	<%= link_to book_path(@books) do %>
				    <%= @books.title %>
				    <% end %>
			    </td>
			    <td>
			    	<%= @books.body %>
			    </td>
			    <td>
			    	<% if @books.user == current_user %>
				    <%= link_to "Edit",edit_book_path(@books), class: "btn-sm btn-success" %>
				</td>
			    <td>
			    	<%= link_to "Destroy",book_path(@books), method: :delete, data: {confirm: "本当に消しますか？"} ,class: "btn-sm btn-danger" %>
			    </td>
			  <tr>
			<% end %>
	        </tbody>
          </table>
      </div>
    </div>
  </div>
</div>