<div id="error_explanation">
<% if @book.errors.any? %>
    <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>

<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
<!-- User info -->
<!-- New book -->
<%= render 'books/list', book: @book, user: current_user %>
      </div>

      <div class="col-xs-9">
        <h2>Books</h2>
          <table class="table">
            <thead>
		      <tr>
			    <th>Title</th>
		        <th>Opinion</th>
		      </tr>
	        </thead>
            <tbody>
	        <% @books.each do |book| %><!-- 繰り返し処理 -->
		      <tr>
			    <td><%= link_to user_path (book.user) do %>
				<%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
				</td>
		    <% end %>
			    <td><%= link_to book.title ,book_path(book.id) %>
			    </td>
			    <td><%= book.body %>
			    </td>
          <td>
            <!-- いいね機能 -->
            <% if book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(book.id), method: :delete do %>
              <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
              <%= book.favorites.count %>
              <% end %>
          <% else %>
              <%= link_to book_favorites_path(book.id), method: :post do %>
              <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
              <%= book.favorites.count %>
              <% end %>
          <% end %>
            <!-- いいね機能 -->
          </td>
          <td>
            <!-- コメント機能 -->
            <p class="comment-count">コメント数：<%= book.book_comments.count %></p>
            <!-- コメント機能 -->
          </td>
	          </tr>
	        <% end %>
	        </tbody>
          </table>
      </div>
    </div>
  </div>
</div>

