<h1>Editing Book</h1>

<%= form_for @books do |f| %>
<!-- @book=Book.new＝＞createアクションで定義した空箱 -->
<h4>Title</h4>
<%= f.text_field :title %>
<!-- 空箱にtitleが登録されている -->
<h4>Opinion</h4>
<%= f.text_area :body %><br><br>
<!-- 空箱にbodyが登録されている -->
<%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show",book_path(@books) %></td>
<%= link_to "Back",books_path(@books) %></td>

