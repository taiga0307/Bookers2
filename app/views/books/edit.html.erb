<h1>Editing Book</h1>

<% if @books.errors.any? %>
  <div class="alert alert-warning">
    <h2><%= @books.errors.count %>error prohibited this obj from being saved:</h2>
    <ul>
      <% @books.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @books do |f| %>
<!-- @book=Book.new＝＞createアクションで定義した空箱 -->
<h4>Title</h4>
<%= f.text_field :title %>
<!-- 空箱にtitleが登録されている -->
<h4>Opinion</h4>
<%= f.text_area :body %><br><br>
<!-- 空箱にbodyが登録されている -->
<%= f.submit 'Update Book' %>

<% end %>

