
<h1>Bookers</h1>

<h3>Userinfo</h3>



<h3>New book</h3>

<%= form_for(@book) do |f| %>
<!-- @book=Book.new＝＞createアクションで定義した空箱 -->
<h4>Title</h4>
<%= f.text_field :title %>
<!-- 空箱にtitleが登録されている -->
<h4>Opinion</h4>
<%= f.text_area :body %><br><br>
<!-- 空箱にbodyが登録されている -->
<%= f.submit 'Create Book' %>

<% end %>


<h2>Users</h2>
<table>
	<thead>
		<tr>
			<th>image</th>
		    <th>name</th>
		</tr>
	</thead>
	<tbody>
	  <% @users.each do |user| %><!-- 繰り返し処理 -->
		<tr>
			<td><%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
			<td><%= user.name %></td>
	    </tr>
	  <% end %>
	</tbody>
</table>
</div>
