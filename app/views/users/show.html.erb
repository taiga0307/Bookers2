<div class="body">
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <div class="col-xs-3">
<%= flash[:notice] %>
<!-- User info -->
<!-- Newb ook -->
<%= render 'books/list', book: @book, user: @user %>
      </div>

      <div class="col-xs-9">
        <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                <%= link_to  user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
                <% end %>
                <td>
                <%= link_to book.title, book_path(book) %>
                </td>
                <td>
                <%= book.body %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>